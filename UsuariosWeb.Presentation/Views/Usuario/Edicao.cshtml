@model UsuariosWeb.Presentation.Models.UsuariosEdicaoModel
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h2>Editar</h2>
        <hr />
        @* Criando o formulário *@
        @using (Html.BeginForm())
        {
            <div>
                <!-- campo oculto -->
                @Html.HiddenFor(model => model.IdUsuario)
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Nome:</label>
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(model => model.Nome)
                    </span>
                </div>
                <div class="col-md-6">
                    <label>Email:</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(model => model.Email)
                    </span>
                </div>
                <!--<div class="row mb-3">
                    <div class="col-md-3">
                        <label>Perfil:</label>
                        Html.DropDownListFor(model => model.IdPerfil, Model.ListagemPerfis,
                        "Escolha uma opção", new { class = "form-select" })
                        <span class="text-danger">
                            Html.ValidationMessageFor(model => model.IdPerfil)
                        </span>
                    </div>
                </div>-->
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <input type="submit" value="Salvar" class="btn btn-primary"/>
                </div>
            </div>
        }
    </div>
</div>